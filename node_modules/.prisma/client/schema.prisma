generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  Alugado
  Disponivel
}

model cliente {
  id_cliente Int    @id
  nome       String
  cnh        Int
}

model carro {
  id_carro     Int      @id
  placa        String
  chassi       String
  ano          DateTime
  modelo       String
  cor          String
  fabricante   String
  status       Status
  valorAluguel Float
}

model aluguel {
  id_aluguel Int @id
  id_cliente Int
  id_carro   Int
}
